{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<div class="page">
  {{#with header}}
    <div class="header">    
      <header class="header__content">
        <div class="header__block">
          <img src="/svg/apple.svg" alt="Apple" class="header__icon">
          <nav class="header__block">
            {{#each links}}
              <a href="{{url}}" class="header__link">{{text}}</a>
            {{/each}}
          </nav>            
        </div>
        <div class="header__block">
          <img src="/svg/search.svg" alt="Search" class="header__icon">
          <img src="/svg/profile.svg" alt="Profile" class="header__icon">
        </div>
      </header>
    </div>
    {{!-- Homework start --}}
    <div class="ad">
      {{#with ad}}
        <div class="ad__content">
          <p class="ad__text">{{title}}</p>
          <a href="{{link.url}}" class="ad__url">{{link.text}} ></a>        
        </div>
      {{/with}}    
    </div>    
    {{!-- Homework end --}}
  {{/with}}

  {{#with iphone_pro}}
    <section class="product product--big product--iphone-pro product--dark product--top">
      <div class="product__content">
        <h1 class="product__title">{{title}}</h1>
        <p class="product__description">{{descriptions}}</p>
        <div class="product__action">
          {{#with link}}
            {{#each text }}
              <a href="{{../link}}" class="product__link">{{this}}</a>        
            {{/each}}
          {{/with}}
        </div>
      </div>
    </section>
  {{/with}}
  {{#with iphone}}
    <section class="product product--big product--iphone product--light product--top">
      <div class="product__content">
        <h1 class="product__title">{{title}}</h1>
        <p class="product__description">{{descriptions}}</p>
        <div class="product__action">
          {{#with link}}
            {{#each text }}
              <a href="{{../link}}" class="product__link">{{this}}</a>        
            {{/each}}
          {{/with}}
        </div>
      </div>
    </section>
  {{/with}}
  {{!-- Homework start --}}
  {{#with iwatch}}
    <section class="product product--big product--iwatch product--dark product--buttom">
      <div class="product__content">
        <h1 class="product__title">{{title}}</h1>
        <p class="product__description">{{descriptions}}</p>
        <div class="product__action">
          {{#with link}}
            {{#each text }}
              <a href="{{../link}}" class="product__link">{{this}}</a>        
            {{/each}}
          {{/with}}
        </div>
      </div>
    </section>
  {{/with}}  
  {{!-- Homework end --}}
</div>

